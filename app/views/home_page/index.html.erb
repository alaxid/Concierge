
  <table id="service_table">
    <tbody>
    <% counter = 0 %>
    <% @services.each do |service| %>
        <% if counter % 3 == 0 then %>
            <tr>
        <% end %>
        <td>
          <% address = get_address %>
          <% if service.icon.url == "/icons/original/missing.png" %>
            <img src="./images/buttons/letra c1.png" id="serviceLink" href=<%=address +"services/"+service.serviceName.gsub(" ", "-")+"/index"%>>
          <% else %>
             <img src=<%=service.icon.url %> id="serviceLink" href=<%=address +"services/"+service.serviceName+"/index"%>>
          <% end %>
         <p class="service_name"><%= service.serviceName %></p>
        </td>
        <% counter = counter + 1 %>
        <% if (counter % 3 == 0) || (counter == @services.size) then %>
            </tr>
        <% end %>
    <% end %>
    </tbody>
  </table>