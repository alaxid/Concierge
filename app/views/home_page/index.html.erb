
  <table>
    <tbody>
    <% counter = 0 %>
    <% @services.each do |service| %>
        <% if counter % 4 == 0 then %>
            <tr>
        <% end %>
        <td>
          <% address = get_address %>
         <img class="service_icon" src="/images/buttons/service-default-icon.png" id="serviceLink" href=<%=address +"services/"+service.serviceName+"/index"%>/>
         <p><%= service.serviceName %></p>
        </td>
        <% counter = counter + 1 %>
        <% if (counter % 4 == 0) || (counter == @services.size) then %>
            </tr>
        <% end %>
    <% end %>
    </tbody>
  </table>